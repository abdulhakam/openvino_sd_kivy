<CustomView>:
    padding: dp(12)
    spacing: dp(7)
    MDCard:
        radius:7,7,7,7
        elevation:2
        shadow_softness: 6
        shadow_offset:(-2,2)
        md_bg_color: "#ffffff"
        padding: dp(24)
        size_hint:1,1
        StackLayout:
            spacing:dp(0),dp(16)
            size_hint:1,1
            MDLabel:
                text:str("Model")
                size_hint:None,None
                height:dp(18)
                width:dp(56)
            MDLabel:
                text:str(app.model_path)
                size_hint:.6,None
                height:dp(18)
            MDTextFieldRect:
                id:prompt
                hint_text:'Prompt'
                text:'(best quality:1.4, high details), mountains scenery, sun and moon, evening, night, sea'
                size_hint: 1 ,None
                height:"128sp"
                background_color:(.5,.5,.5,.1)
            StackLayout:
                spacing:dp(0)
                size_hint:1,None
                height:  dp(18)
                MDLabel:
                    text: "Width"
                    size_hint:None,None
                    width:dp(46)
                    height:  dp(18)
                MDSlider:
                    id:width_control
                    min:64
                    max:512
                    value:app.compiled_width
                    hint:False
                    step:64
                    size_hint:None,None
                    height:  dp(18)
                    width:dp(366)
                MDLabel:
                    text:str(width_control.value)
                    size_hint:None,None
                    width:dp(36)
                    height:  dp(18)
            StackLayout:
                spacing:dp(0),dp(16)
                size_hint:1,None
                height:  dp(18)
                MDLabel:
                    text: "Height"
                    size_hint:None,None
                    width:dp(46)
                    height:  dp(18)
                MDSlider:
                    id:height_control
                    min:64
                    max:512
                    value:app.compiled_height
                    hint:False
                    step:64
                    size_hint:None,None
                    height:  dp(18)
                    width:dp(366)
                MDLabel:
                    text:str(height_control.value)
                    size_hint:None,None
                    width:dp(36)
                    height:  dp(18)
            StackLayout:
                spacing:dp(0),dp(16)
                size_hint:1,None
                height:  dp(18)
                MDLabel:
                    text: "Steps"
                    size_hint:None,None
                    width:dp(46)
                    height:  dp(18)
                MDSlider:
                    id:step_control
                    min:1
                    max:100
                    value:13
                    hint:False
                    step:1
                    size_hint:None,None
                    height:  dp(18)
                    width:dp(366)
                MDLabel:
                    text:str(step_control.value)
                    size_hint:None,None
                    width:dp(36)
                    height:  dp(18)
            MDRaisedButton:
                text:"Generate"
                elevation:1
                on_release:app.t2img(pipeline=app.ov_pipe,prompt=prompt.text,steps=step_control.value,width=width_control.value,height=height_control.value)